{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2016",
        "jsx": "preserve",
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@helpers/*": ["src/helpers/*"],
            "@images/*": ["src/media/*"],
            "@reducers/*": ["src/reducers/*"],
            "@actions/*": ["src/actions/*"],
            "@styles/*": ["src/styles/*"],
            "@fonts/*": ["src/fonts/*"],
            "@views/*": ["src/views/*"],
            "@store": ["src/store.js"]
        }
    },
    "exclude": ["node_modules", "**/node_modules/*"]
}
